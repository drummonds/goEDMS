# goEDMS Environment Configuration
# Copy this file to .env and customize for your local environment
# The .env file is gitignored and will not be committed

# ============================================
# Database Configuration
# ============================================

# Database type: "postgres" or "cockroachdb"
GOEDMS_DATABASE_TYPE=postgres

# Individual database connection parameters (recommended for local development)
GOEDMS_DATABASE_HOST=localhost
GOEDMS_DATABASE_PORT=5432
GOEDMS_DATABASE_NAME=goedms
GOEDMS_DATABASE_USER=goedms
GOEDMS_DATABASE_PASSWORD=your_secure_password_here
GOEDMS_DATABASE_SSLMODE=disable

# OR use a full connection string (overrides individual parameters above)
# GOEDMS_DATABASE_CONNECTIONSTRING=host=localhost port=5432 user=goedms password=secret dbname=goedms sslmode=disable

# For CockroachDB:
# GOEDMS_DATABASE_CONNECTIONSTRING=host=localhost port=26257 user=goedms password=secret dbname=goedms sslmode=require

# ============================================
# Server Configuration (Optional Overrides)
# ============================================

# Server listening port
# GOEDMS_SERVERCONFIG_SERVERPORT=8000

# Server listening IP address (leave empty for all interfaces)
# GOEDMS_SERVERCONFIG_SERVERADDR=

# API URL override (for Docker or special routing)
# GOEDMS_SERVERCONFIG_APIURL=

# ============================================
# Document Storage (Optional Overrides)
# ============================================

# Document library location
# GOEDMS_DOCUMENTLIBRARY_DOCUMENTFILESYSTEMLOCATION=documents

# Default folder for new documents
# GOEDMS_DOCUMENTLIBRARY_DEFAULTNEWDOCUMENTFOLDER=New

# ============================================
# Ingress Configuration (Optional Overrides)
# ============================================

# Ingress folder path
# GOEDMS_INGRESS_INGRESSPATH=ingress

# Ingress scan interval in minutes
# GOEDMS_INGRESS_SCHEDULING_INGRESSINTERVAL=10

# Delete files after processing (true/false)
# GOEDMS_INGRESS_COMPLETED_INGRESSDELETEONPROCESS=false

# Folder to move processed files
# GOEDMS_INGRESS_COMPLETED_INGRESSMOVEFOLDER=done

# Preserve directory structure (true/false)
# GOEDMS_INGRESS_HANDLING_PRESERVEDIRSTRUCTURE=true

# ============================================
# OCR Configuration (Optional Overrides)
# ============================================

# Path to Tesseract binary
# GOEDMS_OCR_TESSERACTBIN=/usr/bin/tesseract

# ============================================
# Authentication (Optional Overrides)
# ============================================

# Enable web UI authentication (true/false)
# GOEDMS_AUTHENTICATION_WEBUIAUTH=false

# Web UI username
# GOEDMS_AUTHENTICATION_WEBUIUSER=admin

# Web UI password
# GOEDMS_AUTHENTICATION_WEBUIPASSWORD=Password1

# ============================================
# Reverse Proxy (Optional Overrides)
# ============================================

# Enable reverse proxy mode (true/false)
# GOEDMS_REVERSEPROXY_PROXYENABLED=false

# Base URL when behind reverse proxy
# GOEDMS_REVERSEPROXY_BASEURL=https://goedms.domain.org

# ============================================
# Logging (Optional Overrides)
# ============================================

# Log level: debug, info, warn, error, fatal
# GOEDMS_LOGGING_LEVEL=debug

# Log output: file or stdout
# GOEDMS_LOGGING_OUTPUTPATH=file

# Log file location
# GOEDMS_LOGGING_LOGFILELOCATION=goedms.log

# ============================================
# Notifications (Optional Overrides)
# ============================================

# PushBullet API token
# GOEDMS_NOTIFICATIONS_PUSHBULLETTOKEN=

# ============================================
# Frontend (Optional Overrides)
# ============================================

# Number of new documents to show
# GOEDMS_FRONTEND_NEWDOCUMENTNUMBER=5
